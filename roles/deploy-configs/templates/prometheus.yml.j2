global:
  scrape_interval: 15s

scrape_configs:

  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['192.168.0.36:9100']
      - targets: ['192.168.0.61:9100']
      - targets: ['192.168.0.62:9100']
      - targets: ['192.168.0.39:9100']